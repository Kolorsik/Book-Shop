<div class="book">
    <div class="row">

    <div class="col s5">
        <img src="{{book.img}}" alt="{{book.title}}">
    </div>

    <div class="col s5">
        <h1>{{book.title}}</h1>

        <h4>{{book.author}}</h4>


        <p>{{book.desc}}</p>

        <p class="price big">{{book.price}}</p>

        {{#if bookError}}
            <p class="alert">{{bookError}}</p>
        {{/if}}

        <form action="/books/rating" method="POST">
            <p class="range-field">
                <input type="range" name="rating" min="1" max="10" />
            </p>
            
            <input type="hidden" name="_id" value="{{book._id}}">

            <button type="submit" class="btn">Оценить!</button>
        </form>

        <p>Рейтинг: {{book.rating}}</p>

        <form  action="/cart/add" method="post">
            <input type="hidden" name="id" value="{{book._id}}">
            <button style="margin-top: 20px;" type="submit" class="btn btn-primary">Добавить в корзину</button>
        </form>

        
    </div>
    </div>
</div>