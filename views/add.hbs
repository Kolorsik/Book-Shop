<h1>Добавить книгу</h1>


{{#if error}}
      <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="post">
    <div class="input-field">
          <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
          <label for="title">Название книги</label>
          <span class="helper-text" data-error="Введите название книги"></span>
    </div>

    <div class="input-field">
          <input id="author" name="author" type="text" class="validate" required value="{{data.author}}">
          <label for="author">Автор книги</label>
          <span class="helper-text" data-error="Введите автора книги"></span>
    </div>

    <div class="input-field">
          <input id="price" name="price" type="number" class="validate" required min="1"value="{{data.price}}">
          <label for="price">Цена</label>
          <span class="helper-text" data-error="Введите цену книги"></span>
    </div>

    <div class="input-field">
          <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
          <label for="img">Картинка</label>
          <span class="helper-text" data-error="Введите ссылку на картинку книги"></span>
    </div>

    <div class="input-field">
          <input id="desc" name="desc" type="text" class="validate" required value="{{data.desc}}">
          <label for="desc">Описание книги</label>
          <span class="helper-text" data-error="Введите описание книги"></span>
    </div>

    <button class="btn btn-primary">Добавить книгу</button>
</form>